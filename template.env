# Discord Bot Settings
DISCORD_TOKEN=your_discord_token_here
# Command prefix for bot commands (default: !)
DISCORD_COMMAND_PREFIX=!
ALLOWED_ROLES=Theater Host

# VLC Settings
VLC_HOST=localhost
VLC_PORT=8080
VLC_PASSWORD=vlc

# TMDB Settings
TMDB_API_KEY=your_tmdb_api_key_here

# Radarr Integration (Optional)
# Configure one or more Radarr instances to view recently downloaded movies.
# Supports both single-instance and multi-instance setups.

# Single Instance (backward compatible):
RADARR_HOST=
RADARR_PORT=7878
RADARR_API_KEY=
RADARR_USE_SSL=false

# Multi-Instance (leave single-instance empty and use this instead):
# Define instance names (comma-separated)
# RADARR_INSTANCES=main,asian,pinoy,anime
# 
# Then configure each instance:
# RADARR_MAIN_HOST=localhost
# RADARR_MAIN_PORT=7878
# RADARR_MAIN_API_KEY=your_main_api_key
# RADARR_MAIN_USE_SSL=false
# RADARR_MAIN_DISPLAY_NAME=Mainstream Movies
# 
# RADARR_ASIAN_HOST=radarr-asian.local
# RADARR_ASIAN_PORT=7878
# RADARR_ASIAN_API_KEY=your_asian_api_key
# RADARR_ASIAN_USE_SSL=true
# RADARR_ASIAN_DISPLAY_NAME=Asian Cinema
# 
# RADARR_PINOY_HOST=radarr-pinoy.local
# RADARR_PINOY_PORT=7878
# RADARR_PINOY_API_KEY=your_pinoy_api_key
# RADARR_PINOY_USE_SSL=false
# RADARR_PINOY_DISPLAY_NAME=Pinoy Movies
# 
# RADARR_ANIME_HOST=radarr-anime.local
# RADARR_ANIME_PORT=7878
# RADARR_ANIME_API_KEY=your_anime_api_key
# RADARR_ANIME_USE_SSL=false
# RADARR_ANIME_DISPLAY_NAME=Anime Movies

# Queue Settings
QUEUE_BACKUP_FILE=queue_backup.json

# Playlist Settings
ITEMS_PER_PAGE=20

# Playlist Autosave (Optional)
# If set, periodically saves the current VLC playlist to this file.
# Use .xspf to save a VLC-playable playlist; any other extension saves JSON.
# Path can be absolute or relative to the project root.
PLAYLIST_AUTOSAVE_FILE=ctrlvee_playlist.xspf
# Interval in seconds (minimum 10)
PLAYLIST_AUTOSAVE_INTERVAL=300

# Watch Folders (Optional)
# Absolute paths separated by commas or semicolons. If a path contains a comma,
# wrap it in double quotes (e.g. "/path/with,comma").
# Leave empty to disable. Example (macOS):
# /Users/you/Movies/Watch, /Volumes/Media/Incoming
WATCH_FOLDERS=
# Optional: use a file with one path per line (supports commas in paths without quoting)
# WATCH_FOLDERS_FILE=/absolute/path/to/watch_folders.txt
# Poll interval in seconds
WATCH_SCAN_INTERVAL=10
# Minimum age (seconds) a file must remain unchanged before being considered stable
WATCH_STABLE_AGE=2
# Enqueue discovered files on the initial scan (true/false)
WATCH_ENQUEUE_ON_START=true

# Watch announcements (Optional)
# Comma-separated Discord channel IDs for announcements; set to 0 or leave empty to disable
WATCH_ANNOUNCE_CHANNEL_ID=0
# Optional role ID to mention in scheduled movie announcements (set to 0 or leave empty to disable)
WATCH_ANNOUNCE_ROLE_ID=0
# Max file paths to include per announcement message
WATCH_ANNOUNCE_MAX_ITEMS=10
# Milliseconds to wait between per-file watch-folder announcements (helps avoid TMDB/Discord rate limits)
WATCH_ANNOUNCE_THROTTLE_MS=500

# Voice Channel Settings (Optional)
# Enable or disable the bot automatically joining a voice channel on startup (helps with visible presence).
# Set to true/false (or 1/0). Default: true
ENABLE_VOICE_JOIN=true
# Discord voice channel ID for the bot to join. Required if ENABLE_VOICE_JOIN=true
VOICE_JOIN_CHANNEL_ID=0
# Whether to join the voice channel immediately on startup. Default: true
VOICE_AUTO_JOIN_ON_START=true

# Voice Reconnect/Connect Tuning (Optional)
# Max reconnect attempts within the window before entering cooldown. Default: 3
VOICE_MAX_RECONNECTS=3
# Time window (seconds) over which reconnect attempts are counted. Default: 60
VOICE_RECONNECT_WINDOW=60
# Cooldown (seconds) after exceeding max reconnects. Default: 30
VOICE_RECONNECT_COOLDOWN=30
# Voice connect timeout in seconds. Default: 20.0
VOICE_CONNECT_TIMEOUT=20.0
# Delay between connection attempts (seconds). Default: 2.0
VOICE_CONNECT_RETRY_DELAY=2.0
# Delay after voice websocket errors (seconds). Default: 5.0
VOICE_ERROR_RETRY_DELAY=5.0
# Number of extra retries after the first attempt when joining on startup/on-demand. Default: 2
VOICE_INITIAL_RETRIES=2
# Logger level for internal discord voice_state logs. Options: CRITICAL, ERROR, WARNING, INFO, DEBUG. Default: CRITICAL
DISCORD_VOICE_LOG_LEVEL=CRITICAL
# Initial settle window after a successful join to avoid reacting to transient library reconnects (seconds). Default: 20
VOICE_INITIAL_SETTLE_SECONDS=20
# Debounce window suppressing reconnect attempts after recent healthy verifies (seconds). Default: 5
VOICE_DEBOUNCE_SECONDS=5

# Control bot-side reconnect logic
# Enable/disable background voice connection guard loop. Default: false
ENABLE_VOICE_GUARD=false
# Enable/disable reconnect attempts triggered by voice state events. Default: true
ENABLE_VOICE_EVENTS_RECONNECT=true

# Optional: Ko-fi / support link to show in bot embed footers
# Example: https://ko-fi.com/yourname
KOFI_URL=

# Presence / Activity (Optional)
# Enable or disable the bot updating its Discord presence/activity (watching the current media).
# Set to true/false (or 1/0). Default: true
ENABLE_PRESENCE=true
# Throttle (seconds) between presence updates to avoid rate limits. Default: 5
PRESENCE_UPDATE_THROTTLE=5

# Include playback progress in the presence text (e.g., "ðŸŽ¬ Title â€” 01:23/02:16:00").
# Set to true/false (or 1/0). Default: true
ENABLE_PRESENCE_PROGRESS=true
# Interval in seconds between presence progress updates. Default: 30
PRESENCE_PROGRESS_UPDATE_INTERVAL=30

# Periodic "Now Playing" Announcements (Optional)
# Announce the currently playing media at a regular interval.
# This is useful for users who join mid-playback.
# Set to true/false (or 1/0). Default: false
PERIODIC_ANNOUNCE_ENABLED=false
# Interval in seconds between periodic announcements. Default: 300 (5 minutes)
PERIODIC_ANNOUNCE_INTERVAL=300
